<!DOCTYPE html>
<html lang="es">

<%- include('partials/head', {title: 'Agregar película' }) %>


  <body>
    <figure>
      <img src="/img/logo-DH.png" alt="Logo Digital House">
    </figure>

    <ul class="nav nav-underline mb-3">
      <li class="nav-item"><a class="nav-link" aria-current="page" href="/movies">Listado de peliculas</a></li>
      <li class="nav-item"><a class="nav-link" aria-current="page" href="/movies/new">Ultimos estrenos</a></li>
      <li class="nav-item"><a class="nav-link" aria-current="page" href="/movies/recommended">Top 5</a></li>
      <li class="nav-item"><a class="nav-link" aria-current="page" href="/genres">Listado de géneros</a></li>
    </ul>


    <div class="col-12 col-md-10 col-lg-6 mx-auto">

      <h1 class="text-center">Agregar Película</h1>
      <section class="formulario">
        <form action="/movies/create" method="POST">

          <!-- title -->

          <div class="mb-3">
            <label for="title">Title </label>
            <p><input type="text" class="form-control <%= locals.errors && (errors.title && 'is-invalid') %>" id="title"
                placeholder="Título de la película" name="title"
                value="<%= locals.old && (old.title && old.title ) %>" /></p>
            <small class="text-danger ms-2">
              <%= locals.errors && (errors.title && errors.title.msg) %>
            </small>
          </div>



          <!-- rating -->
          <div class="mb-3">
                    <label for="rating">Rating </label>
          <p><input class="form-control <%= locals.errors && (errors.rating && 'is-invalid') %>" type="number"
              name="rating" id="rating" placeholder="Rating" value="<%= locals.old && (old.rating && old.rating ) %>">
          </p>
          <small class="text-danger ms-2">
            <%= locals.errors && (errors.rating && errors.rating.msg) %>
          </small>
          </div>


          <!-- awards -->
          <div class="mb-3">
                    <label for="awards">Awards </label>
          <p><input class="form-control <%= locals.errors && (errors.awards && 'is-invalid') %>" type="number"
              name="awards" id="awards" placeholder="Premios" value="<%= locals.old && (old.awards && old.awards ) %>">
          </p>
          <small class="text-danger ms-2">
            <%= locals.errors && (errors.awards && errors.awards.msg) %>
          </small>
          </div>


          <!-- release_date -->
          <div class="mb-3">
                    <label for="release_date">Release date </label>
          <p><input class="form-control <%= locals.errors && (errors.release_date && 'is-invalid') %>" type="date"
              name="release_date" id="release_date"
              value="<%= locals.old && (old.release_date && old.release_date ) %>"></p>
          <small class="text-danger ms-2">
            <%= locals.errors && (errors.release_date && errors.release_date.msg) %>
          </small>
          </div>


          <!-- length -->
          <div class="mb-3">
          <label for="length">Length </label>
          <p><input class="form-control <%= locals.errors && (errors.length && 'is-invalid') %>" type="number"
              name="length" id="" placeholder="Duración" value="<%= locals.old && (old.length && old.length ) %>"></p>
          <small class="text-danger ms-2">
            <%= locals.errors && (errors.length && errors.length.msg) %>
          </small>
          </div>
          
          <br>
          <p> <button class="btn btn-success" type="submit">Agregar</button>

        </form>
      </section>

    </div>


  </body>

</html>